

            <section id="catalog">
                <h1>All Movies</h1>
                <div class="band">

                    {{#each movies}}
                        {{>movie}}
                    {{else}}
                    <!-- If there are still no posts in the database display: -->
                    <div class="no-posts">
                        <p class="no-offer">There are no posts yet...</p>
                    </div>
                    {{/each}}
                </div>
            </section>
